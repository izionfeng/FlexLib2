<?xml version='1.0' encoding='UTF-8'?>
<UIView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:ios="https://github.com/zionfong/FlexLib2.git" xmlns:tools="http://schemas.android.com/tools" app:flex="1" app:alignItems="center" ios:bgColor="white">
  <UIView ios:layout_height="1" ios:layout_width="100%" ios:bgColor="red"/>
  <FlexScrollView ios:name="scroll" ios:padding="10" app:flex="1" ios:layout_width="100%" ios:bgColor="#f5f5f5" ios:vertScroll="true" ios:horzIndicator="false" ios:vertIndicator="true">
    <UILabel ios:fontSize="14" ios:color="#666666" ios:text="Serial No."/>
    <UIView ios:layout_height="20"/>
    <UITextField ios:layout_height="50" ios:style="system/border" ios:text="" ios:placeHolder="Input the sn here"/>
    <UIView ios:layout_height="20"/>
    <TestXmlView ios:bgColor="lightGray"/>
    <UILabel ios:layout_width="100%" ios:layout_height="50" ios:stickTop="true" ios:bgColor="lightGray" ios:fontSize="18" ios:color="#880000" ios:text="这是一个能够吸附到顶部的控件\" ios:linesNum="0"/>
    <UIView ios:layout_height="20"/>
    <UIView app:flexDirection="row" ios:padding="10" app:alignItems="center" ios:style="system/border" ios:bgColor="white">
      <UIImageView ios:layout_width="40" ios:layout_height="40" ios:source="addnewtype.png"/>
      <UIView>
        <UILabel ios:fontSize="14" ios:color="#666666" ios:text="Name - zhenglibao"/>
        <UIView ios:layout_height="10"/>
        <UILabel ios:fontSize="12" ios:color="#999999" ios:text="Your favorite."/>
      </UIView>
    </UIView>
    <UIView ios:layout_height="20"/>
    <UIView ios:padding="10" ios:style="system/border">
      <UILabel ios:layout_marginLeft="5" ios:style="system/filterLeftLabel" ios:text="Sex"/>
      <UIView app:flexDirection="row" app:justifyContent="space-around">
        <UILabel ios:layout_width="30%" ios:style="system/redBorder" ios:text="200" ios:textAlign="center"/>
        <UILabel ios:layout_width="30%" ios:style="system/redBorder" ios:text="300" ios:textAlign="center"/>
        <UILabel ios:layout_width="30%" ios:style="system/redBorder" ios:text="400" ios:textAlign="center"/>
      </UIView>
    </UIView>
    <UIView ios:layout_height="20"/>
    <UIView app:flexDirection="row" ios:padding="10" ios:style="system/border">
      <UILabel ios:style="system/bigFont" ios:text="Address"/>
      <UIView ios:layout_width="5"/>
      <UIView app:flex="1">
        <UILabel ios:layout_width="100%" ios:style="system/bigFont" ios:fontSize="18" ios:text="北京市海淀区学院路甲5号-中关村768产业园" ios:linesNum="4" ios:lineBreakMode="charWrapping"/>
      </UIView>
    </UIView>
    <UIView ios:layout_height="20"/>
    <UIView ios:padding="10" ios:layout_width="100%" ios:style="system/border">
      <UILabel ios:name="attrLabel" ios:layout_width="100%" ios:linesNum="0" ios:lineSpacing="20">
        <Text ios:name="a1" ios:onPress="tapText:" ios:text="@uilabellang" ios:font="system|18"/>
        <Text ios:onPress="tapText:" ios:text="粗体粗体粗体粗体粗体" ios:font="bold|22"/>
        <Text ios:name="a2" ios:onPress="tapText:" ios:text="斜体斜体斜体斜体斜体斜体斜体" ios:font="italic|12" ios:color="red" ios:bgColor="green"/>
        <Image ios:name="a3" ios:onPress="tapText:" ios:source="addnewtype.png" ios:size="80/80"/>
        <Text ios:onPress="tapText:" ios:font="bold|18" ios:underline="single" ios:color="blue"/>
        <Text ios:onPress="tapText:" ios:text="删除线" ios:font="bold|18" ios:strike="single"/>
        <Text ios:onPress="tapLabel:" ios:text="请点击这里修改AttributeString" ios:font="bold|18" ios:color="red"/>
      </UILabel>
    </UIView>
    <UIView ios:layout_height="20"/>
    <UILabel ios:name="multilabel" ios:layout_width="100%" ios:style="system/bigFont" ios:linesNum="0"/>
    <UIView ios:layout_height="40"/>
    <UIView ios:onPress="tapShow" app:flexDirection="row" app:justifyContent="center" ios:padding="10" app:alignItems="center" ios:style="system/border">
      <UILabel ios:layout_height="30" ios:style="system/bigFont" ios:color="red" ios:text="Click to show / hide text"/>
    </UIView>
    <UIView ios:layout_height="20" ios:bgColor="clear"/>
    <UILabel ios:layout_width="100%" ios:style="system/bigFont" ios:text="测试文字\" ios:linesNum="0"/>
    <UIView ios:layout_height="50" ios:bgColor="clear"/>
  </FlexScrollView>
</UIView>
