<?xml version='1.0' encoding='UTF-8'?>
<UIView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:ios="https://github.com/zionfong/FlexLib2.git" xmlns:tools="http://schemas.android.com/tools" app:flex="1" app:justifyContent="center" app:alignItems="center" ios:bgColor="white">
  <UILabel ios:layout_marginTop="20" ios:style="system/buttonText" ios:text="justifyContent Demo"/>
  <FlexScrollView app:flex="1" ios:layout_width="100%" app:alignItems="center" ios:vertScroll="true">
    <UIView app:flexDirection="row" ios:layout_width="100%" app:justifyContent="space-around">
      <!-- justifyContent flex-start -->
      <UIView ios:layout_width="45%" app:alignItems="center">
        <UILabel ios:layout_marginTop="20" ios:style="system/buttonText" ios:text="flex-start"/>
        <UIView ios:layout_width="100%" ios:layout_height="200" app:alignItems="center" app:justifyContent="flex-start" ios:borderWidth="1" ios:borderColor="lightGray" ios:borderRadius="4">
          <UIView ios:layout_width="50%" ios:layout_height="15%" ios:bgColor="red"/>
          <UIView ios:layout_width="70%" ios:layout_height="15%" ios:bgColor="green"/>
          <UIView ios:layout_width="40%" ios:layout_height="15%" ios:bgColor="blue"/>
        </UIView>
      </UIView>
      <!-- justifyContent flex-end -->
      <UIView ios:layout_width="45%" app:alignItems="center">
        <UILabel ios:layout_marginTop="20" ios:style="system/buttonText" ios:text="flex-end"/>
        <UIView ios:layout_width="100%" ios:layout_height="200" app:alignItems="center" app:justifyContent="flex-end" ios:borderWidth="1" ios:borderColor="lightGray" ios:borderRadius="4">
          <UIView ios:layout_width="50%" ios:layout_height="15%" ios:bgColor="red"/>
          <UIView ios:layout_width="70%" ios:layout_height="15%" ios:bgColor="green"/>
          <UIView ios:layout_width="40%" ios:layout_height="15%" ios:bgColor="blue"/>
        </UIView>
      </UIView>
    </UIView>
    <UIView app:flexDirection="row" ios:layout_width="100%" app:justifyContent="space-around">
      <!-- justifyContent center -->
      <UIView ios:layout_width="45%" app:alignItems="center">
        <UILabel ios:layout_marginTop="20" ios:style="system/buttonText" ios:text="center"/>
        <UIView ios:layout_width="100%" ios:layout_height="200" app:alignItems="center" app:justifyContent="center" ios:borderWidth="1" ios:borderColor="lightGray" ios:borderRadius="4">
          <UIView ios:layout_width="50%" ios:layout_height="15%" ios:bgColor="red"/>
          <UIView ios:layout_width="70%" ios:layout_height="15%" ios:bgColor="green"/>
          <UIView ios:layout_width="40%" ios:layout_height="15%" ios:bgColor="blue"/>
        </UIView>
      </UIView>
      <!-- justifyContent space-between -->
      <UIView ios:layout_width="45%" app:alignItems="center">
        <UILabel ios:layout_marginTop="20" ios:style="system/buttonText" ios:text="space-between"/>
        <UIView ios:layout_width="100%" ios:layout_height="200" app:alignItems="center" app:justifyContent="space-between" ios:borderWidth="1" ios:borderColor="lightGray" ios:borderRadius="4">
          <UIView ios:layout_width="50%" ios:layout_height="15%" ios:bgColor="red"/>
          <UIView ios:layout_width="70%" ios:layout_height="15%" ios:bgColor="green"/>
          <UIView ios:layout_width="40%" ios:layout_height="15%" ios:bgColor="blue"/>
        </UIView>
      </UIView>
    </UIView>
    <UIView app:flexDirection="row" ios:layout_width="100%" app:justifyContent="space-around">
      <!-- justifyContent space-around -->
      <UIView ios:layout_width="45%" app:alignItems="space-around">
        <UILabel ios:layout_marginTop="20" ios:style="system/buttonText" ios:text="space-around"/>
        <UIView ios:layout_width="100%" ios:layout_height="200" app:alignItems="center" app:justifyContent="space-around" ios:borderWidth="1" ios:borderColor="lightGray" ios:borderRadius="4">
          <UIView ios:layout_width="50%" ios:layout_height="15%" ios:bgColor="red"/>
          <UIView ios:layout_width="70%" ios:layout_height="15%" ios:bgColor="green"/>
          <UIView ios:layout_width="40%" ios:layout_height="15%" ios:bgColor="blue"/>
        </UIView>
      </UIView>
      <!-- justifyContent blank -->
      <UIView ios:layout_width="45%" app:alignItems="center"/>
    </UIView>
  </FlexScrollView>
</UIView>
