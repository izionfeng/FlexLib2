<?xml version='1.0' encoding='UTF-8'?>
<UIView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:ios="https://github.com/zionfong/FlexLib2.git" xmlns:tools="http://schemas.android.com/tools" app:flex="1" app:justifyContent="center" app:alignItems="center" ios:bgColor="white">
  <UIView ios:layout_height="1" ios:layout_width="*50%" ios:bgColor="red"/>
  <FlexScrollView ios:name="_scroll" app:flex="1" ios:layout_width="100%" app:alignItems="center" ios:vertScroll="true">
    <UILabel ios:name="_label" ios:layout_marginTop="*20" ios:style="system/buttonText" ios:text="You can run on iPhoneX" ios:color="blue"/>
    <UILabel ios:name="_label" ios:layout_marginTop="20" ios:style="system/buttonText" ios:text="@multilangdemo" ios:linesNum="0" ios:color="blue"/>
    <UIView ios:layout_width="100%" app:flexDirection="row" app:justifyContent="space-around">
      <FlexTouchView ios:onPress="onControls" app:style="system/button" ios:style="system/buttonAttr">
        <UILabel ios:style="system/buttonText" ios:text="Controls"/>
      </FlexTouchView>
      <FlexTouchView ios:onPress="onTestTable:" app:style="system/button" ios:style="system/buttonAttr">
        <UILabel ios:style="system/buttonText" ios:text="TableView"/>
      </FlexTouchView>
    </UIView>
    <UIView ios:layout_width="100%" app:flexDirection="row" app:justifyContent="space-around">
      <FlexTouchView ios:onPress="onTestScrollView:" app:style="system/button" ios:style="system/buttonAttr">
        <UILabel ios:style="system/buttonText" ios:text="ScrollView"/>
      </FlexTouchView>
      <FlexTouchView ios:onPress="onTestModalView:" app:style="system/button" ios:style="system/buttonAttr">
        <UILabel ios:style="system/buttonText" ios:text="ModalView"/>
      </FlexTouchView>
    </UIView>
    <UIView ios:layout_width="100%" app:flexDirection="row" app:justifyContent="space-around">
      <FlexTouchView ios:onPress="onTestLoginView:" app:style="system/button" ios:style="system/buttonAttr">
        <UILabel ios:style="system/buttonText" ios:text="FlexTouchView"/>
      </FlexTouchView>
      <FlexTouchView ios:onPress="onCollectionView" app:style="system/button" ios:style="system/buttonAttr">
        <UILabel ios:style="system/buttonText" ios:text="CollectionView"/>
      </FlexTouchView>
    </UIView>
    <UIView ios:layout_width="100%" app:flexDirection="row" app:justifyContent="space-around">
      <FlexTouchView ios:onPress="onTextView:" app:style="system/button" ios:style="system/buttonAttr">
        <UILabel ios:style="system/buttonText" ios:text="Forms"/>
      </FlexTouchView>
      <FlexTouchView ios:onPress="onViewLayouts:" app:style="system/button" ios:style="system/buttonAttr">
        <UILabel ios:style="system/buttonText" ios:text="Layouts"/>
      </FlexTouchView>
    </UIView>
    <UIView ios:layout_width="100%" app:flexDirection="row" app:justifyContent="space-around">
      <FlexTouchView ios:onPress="onFrameVC" app:style="system/button" ios:style="system/buttonAttr">
        <UILabel ios:style="system/buttonText" ios:text="FrameVC"/>
      </FlexTouchView>
      <FlexTouchView ios:onPress="onExplorerFlex" app:style="system/button" ios:style="system/buttonAttr">
        <UILabel ios:style="system/buttonText" ios:text="Online Flex Explorer"/>
      </FlexTouchView>
    </UIView>
    <UIView ios:layout_width="100%" app:flexDirection="row" app:justifyContent="space-around">
      <FlexTouchView ios:onPress="onFrameView" app:style="system/button" ios:style="system/buttonAttr">
        <UILabel ios:style="system/buttonText" ios:text="FrameView"/>
      </FlexTouchView>
      <FlexTouchView ios:onPress="onFrameView" app:style="system/button" ios:style="system/buttonAttr" ios:alpha="0" ios:userInteractionEnabled="false">
        <UILabel ios:style="system/buttonText" ios:text="FrameView"/>
      </FlexTouchView>
    </UIView>
  </FlexScrollView>
</UIView>
